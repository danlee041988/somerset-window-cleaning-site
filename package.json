{
  "name": "somerset-window-cleaning",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "./scripts/dev-server.sh",
    "dev:3000": "next dev -H localhost -p 3000",
    "dev:clean": "rm -rf .next && next dev -H localhost -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:static": "next build",
    "preview:static": "npx --yes serve -l 4321 out || python3 -m http.server 4321 -d out",
    "dev:preview": "npm run build:static && npm run preview:static",
    "dev:fallback": "next dev -H localhost -p 3001",
    "swc1": "npm run dev:fallback",
    "dev:enhanced": "./scripts/dev-server.sh",
    "gen:images": "node scripts/build-image-manifest.mjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:full": "playwright test --config=playwright.full.config.ts",
    "test:frontend": "playwright test --config=playwright.full.config.ts tests/e2e/frontend-changes.spec.ts",
    "test:frontend:headed": "playwright test --config=playwright.full.config.ts tests/e2e/frontend-changes.spec.ts --headed"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@next/third-parties": "^14.2.5",
    "@notionhq/client": "^2.3.0",
    "@sentry/nextjs": "^10.16.0",
    "@types/react-google-recaptcha": "^2.1.9",
    "clsx": "^2.1.1",
    "google-ads-api": "^21.0.1",
    "google-auth-library": "^10.3.0",
    "googleapis": "^160.0.0",
    "next": "^14.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.51.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.4.41",
    "puppeteer": "^24.21.0",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.5.3",
    "vercel": "^48.0.0"
  }
}
